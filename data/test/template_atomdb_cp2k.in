&GLOBAL
  PROJECT ATOM
  PROGRAM_NAME ATOM
&END GLOBAL
&ATOM
  ATOMIC_NUMBER ${number}
  ELECTRON_CONFIGURATION (${mult}) CORE ${line:include_atomdb_cp2k_valence.inc}
  CORE none

  MAX_ANGULAR_MOMENTUM 1
  &METHOD
     METHOD_TYPE UKS
     &XC
       &XC_FUNCTIONAL PADE
       &END XC_FUNCTIONAL
     &END XC
  &END METHOD
  &POTENTIAL
      PSEUDO_TYPE GTH
      POTENTIAL_FILE_NAME ../../../POTENTIAL
      POTENTIAL_NAME ${line:include_atomdb_cp2k_ppot.inc}
  &END POTENTIAL
  &PP_BASIS
      BASIS_SET_FILE_NAME ../../../BASIS_SET
      BASIS_TYPE CONTRACTED_GTO
      BASIS_SET DZVP-GTH-PADE
  &END PP_BASIS
  &PRINT
    &BASIS_SET ON
    &END
    &ORBITALS ON
    &END
    &POTENTIAL ON
    &END
  &END
&END ATOM
